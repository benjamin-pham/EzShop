{
	"AllowedHosts": "*",
	"Serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Elastic.Serilog.Sinks"
		],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Information"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"restrictedToMinimumLevel": "Information",
					"outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss zzz} {Level:u3}] {callerInfo} {Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "Elasticsearch",
				"Args": {
					"nodeUris": "http://localhost:9200"
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithThreadId"
		],
		"Properties": {
			"Application": "EzShop"
		}
	}
}
